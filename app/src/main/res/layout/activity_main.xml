<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/parentsBack"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/textLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextScreen"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="end"

            android:hint="0"
            android:padding="15dp"
           android:textSize="45sp" />

        <TextView
            android:id="@+id/TextResult"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="end"
            android:textColor="@color/buttonColor"

            android:hint="Result"
            android:padding="5dp"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalMental"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/buttonOfNumPercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="％"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonOfNumSquare"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:text="x^"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonOfRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="30dp" />

        <Button
            android:id="@+id/buttonOfNumDivided"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="30dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalFirst"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/buttonOfNumOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumthree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumMultiple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="✖"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticaltwo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/buttonOfNumFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumFive"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumSix"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"

            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"

            android:textSize="60dp"

            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalthree"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/buttonOfSeven"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumEight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumNine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumMinus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="−" android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"

            android:textSize="50dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalfoor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOfNumClear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumZero"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp" />

        <Button
            android:id="@+id/buttonOfNumDot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="70dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonOfNumEqual"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:background="@drawable/buttonshape"

            android:textColor="@color/buttonColor"
            android:textSize="50dp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>