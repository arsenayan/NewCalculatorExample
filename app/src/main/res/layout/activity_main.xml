<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MarginLinearStyle"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/textLinear"
        style="@style/ForTextLinear">

        <TextView
            android:id="@+id/TextScreen"
            style="@style/TextScreenStyle" />

        <TextView
            android:id="@+id/TextResult"
            style="@style/TextResultStyle" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalMental"
        style="@style/LogicLinearStyle"

        >

        <Button
            android:id="@+id/buttonOfNumPercent"
            style="@style/LogicButtonStyleFor"
            android:text="@string/percent" />

        <Button
            android:id="@+id/buttonOfNumPlusMinus"
            style="@style/LogicButtonStyleFor"
            android:text="@string/PlusMinus" />

        <Button
            android:id="@+id/buttonOfRoot"
            style="@style/LogicButtonStyleFor"
            android:text="@string/Root" />

        <Button
            android:id="@+id/buttonOfNumDivided"
            style="@style/LogicButtonStyleFor"
            android:text="@string/Divide" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalFirst"
        style="@style/LinearStyle">

        <Button
            android:id="@+id/buttonOfNumOne"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/One" />

        <Button
            android:id="@+id/buttonOfNumTwo"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Two" />

        <Button
            android:id="@+id/buttonOfNumthree"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Three"

            />

        <Button
            android:id="@+id/buttonOfNumMultiple"
            style="@style/NumberButtonStyleFor"
            android:text="@string/MultNew" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticaltwo"
        style="@style/LinearStyle"

        >

        <Button
            android:id="@+id/buttonOfNumFour"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Four" />

        <Button
            android:id="@+id/buttonOfNumFive"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Five" />

        <Button
            android:id="@+id/buttonOfNumSix"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Six" />

        <Button
            android:id="@+id/buttonOfNumPlus"
            style="@style/NumberButtonStyleFor"
            android:text="@string/Plus" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalthree"
        style="@style/LinearStyle"

        >

        <Button
            android:id="@+id/buttonOfSeven"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Seven" />

        <Button
            android:id="@+id/buttonOfNumEight"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Eight" />

        <Button
            android:id="@+id/buttonOfNumNine"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Nine" />

        <Button
            android:id="@+id/buttonOfNumMinus"
            style="@style/NumberButtonStyleFor"
            android:text="@string/Minus" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalfoor"
        style="@style/LinearStyle">

        <Button
            android:id="@+id/buttonOfNumClear"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Clear" />

        <Button
            android:id="@+id/buttonOfNumZero"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Zero" />
        <Button
            android:id="@+id/buttonOfNumDot"
            style="@style/NumberButtonStyleForBlack"
            android:text="@string/Dot" />


        <Button
            android:id="@+id/buttonOfNumEqual"
            style="@style/EqualButtonStyleFor"
            android:text="@string/Equal" />


    </LinearLayout>


</LinearLayout>